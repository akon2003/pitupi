{// 引入标签库 }
<tagLib name="html" />
<include file="Public:header" />
<script type="text/javascript" src="__TMPL__Common/js/calendar/calendar.php?lang=zh-cn" ></script>
<load href='__TMPL__Common/js/calendar/calendar.css' />
<load href='__TMPL__Common/js/calendar/calendar.js' />
<load href='__TMPL__Common/js/sms_index.js' />
<div class="main">
<div class="main_title">{$main_title}</div>
<div class="blank5"></div>
<div class="search_row">
	<form name="search" action="__APP__" method="post">	
		<table style="text-align:left;vertical-align:top;">
			<tr>
				<td style="width:120px;"><b>电话号码: </b></td>
				<td>
					<label><input type="radio" name="valid_mobile" value="-1" <if condition="$conditions['valid_mobile'] eq -1">checked</if> /> 所有</label>
					<label><input type="radio" name="valid_mobile" value="1" <if condition="$conditions['valid_mobile'] eq 1">checked</if> /> 非空</label>
					<label><input type="radio" name="valid_mobile" value="0" <if condition="$conditions['valid_mobile'] eq 0">checked</if> /> 空号码</label>
				</td>
			</tr>
			<tr>
				<td style="width:120px;"><b>有效注册: </b></td>
				<td>
					<label><input type="radio" name="valid_user" value="-1" <if condition="$conditions['valid_user'] eq -1">checked</if> /> 所有</label>
					<label><input type="radio" name="valid_user" value="1" <if condition="$conditions['valid_user'] eq 1">checked</if> /> 有效</label>
					<label><input type="radio" name="valid_user" value="0" <if condition="$conditions['valid_user'] eq 0">checked</if> /> 无效</label>
				</td>
			</tr>
			<tr>
				<td style="width:120px;"><b>实名认证: </b></td>
				<td>
					<label><input type="radio" name="valid_idcardpassed" value="-1" <if condition="$conditions['valid_idcardpassed'] eq -1">checked</if> /> 所有</label>
					<label><input type="radio" name="valid_idcardpassed" value="1" <if condition="$conditions['valid_idcardpassed'] eq 1">checked</if> /> 认证</label>
					<label><input type="radio" name="valid_idcardpassed" value="0" <if condition="$conditions['valid_idcardpassed'] eq 0">checked</if> /> 未认证</label>
				</td>
			</tr>
			<tr>
				<td style="width:120px;"><b>是否投资: </b></td>
				<td>
					<label><input type="radio" name="valid_load" value="-1" <if condition="$conditions['valid_load'] eq -1">checked</if> /> 所有</label>
					<label><input type="radio" name="valid_load" value="1" <if condition="$conditions['valid_load'] eq 1">checked</if> /> 投资</label>
					<label><input type="radio" name="valid_load" value="0" <if condition="$conditions['valid_load'] eq 0">checked</if> /> 未投资</label>
				</td>
			</tr>
			<tr>
				<td style="width:120px;"><b>注册时间: </b></td>
				<td>
					<input type="text" class="textbox" name="begin_time" id="begin_time" value="{:trim($_REQUEST['begin_time'])}" onfocus="return showCalendar('begin_time', '%Y-%m-%d', false, false, 'begin_time');"/> -
					<input type="text" class="textbox" name="end_time" id="end_time" value="{:trim($_REQUEST['end_time'])}" onfocus="return showCalendar('end_time', '%Y-%m-%d', false, false, 'end_time');"/>
				</td>
			</tr>
			<tr>
				<td style="width:120px;"></td>
				<td>
					<input type="submit" class="button" value="{%SEARCH}" style="width:180px" />
					<if condition="$count and $count gt 0">
						<span>&nbsp;<b>查询总人数: </b>{$count} 人</span>
					</if>
				</td>
			</tr>
		</table>
		<input type="hidden" value="<php>echo MODULE_NAME;</php>" name="m" />
		<input type="hidden" value="sms_send_multi_result" name="a" />
		<input type="hidden" value="1" name="select_valid_user" />
	</form>
</div>
<div class="blank5"></div>
<if condition="$count and $count gt 0">
<div class="search_row">
	<table id="dataTable" class="dataTable">
		<foreach name="list" item="item">
		<tr>
			<foreach name="item" item="user" key="key">
				<td <if condition="($key eq 1) or ($key eq 3)">style="background:#eee"</if>>{$user.mobile}</td>
				<td <if condition="($key eq 1) or ($key eq 3)">style="background:#eee"</if>>{$user.real_name}</td>
			</foreach>
		</tr>
		</foreach>
	</table>
</div>
</if>
</div>
<include file="Public:footer" />
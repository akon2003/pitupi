{// 引入标签库 }
<tagLib name="html" />
<include file="Public:header" />
<php>
	function get_is_quota($status){
		if($status==1){
			return "是";
		}
		else{
			return "否";
		}
	}
	function get_icon($icon) {
		if ($icon != '') {
			return "<img src='".$icon."' height='60px'/>";
		} else {
			return '';
		}
	}
</php>
<div class="main">
<div class="main_title">{$main_title}</div>
<div class="blank5"></div>
<div class="button_row">
	<input type="button" class="button" value="{%ADD}类型" onclick="add();" />
	<input type="button" class="button" value="{%EDIT}类型" onclick="_edit();" />
</div>
<div class="blank5"></div>
<html:list 
	id="dataTable" 
	style="dataTable dataTableSelect dataTableSelectDblclick" 
	name="deal" 
	datasource="list" 
	show="id|checkbox:选择|50px
		,name:名称
		,is_quota|get_is_quota:是否需要额度
		,is_effect|get_is_effect:{%IS_EFFECT}
		,sort|get_sort=$deal['id']:{%SORT}
		,icon|get_icon:显示缩略图"
	/> 

<div class="blank5"></div>
<div class="page">{$page}</div>
</div>
<include file="Public:footer" />
{// 引入标签库 }
<tagLib name="html" />
<include file="Public:header" />
<php>
	function get_type_name($type) {
		switch ($type) {
			case 1:
				return '标签集'; break;
			case 2:
				return 'url地址'; break;
			case 3:
				return '分类排行'; break;
			case 4:
				return '最亮达人'; break;
			case 5:
				return '搜索发现'; break;
			case 6:
				return '一起拍'; break;
			case 7:
				return '热门单品排行'; break;
			case 8:
				return '直接显示某个分享'; break;
			default:
				return '';
		}
	}
	function get_page_name($page) {
		switch ($page) {
			case 'top':
				return '首页广告'; break;
			case 'deal':
				return '首页借款单'; break;
			default:
				return '';
		}
	}
	function get_open_url_type_name($type) {
		switch ($type) {
			case 0:
				return '使用内置浏览器打开'; break;
			case 1:
				return '使用外置浏览器打开'; break;
			default:
				return '';
		}
	}
</php>
<div class="main">
<div class="main_title">{$main_title}</div>
<div class="blank5"></div>
<div class="button_row">
	<input type="button" class="button" value="{%ADD}手机端广告" onclick="add();" />
	<input type="button" class="button" value="{%EDIT}手机端广告" onclick="_edit();" />
</div>
<div class="blank5"></div>
<html:list 
	id="dataTable" 
	style="dataTable dataTableSelect dataTableSelectDblclick" 
	name="adv" 
	datasource="list" 
	show="id|checkbox:选择|50px
		,name:广告名称
		,img:图片地址
		,page|get_page_name:页面位置
		,type|get_type_name:类型
		,sort:排序
		,status|get_is_effect:{%IS_EFFECT}
		,open_url_type|get_open_url_type_name:打开方式" 
	 /> 

<div class="blank5"></div>
<div class="page">{$page}</div>
</div>
<include file="Public:footer" />
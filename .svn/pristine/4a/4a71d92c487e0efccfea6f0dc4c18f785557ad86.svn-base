{// 引入标签库 }
<tagLib name="html" />
<include file="Public:header" />
<div class="main">
<div class="main_title">{$main_title} <a href="{:u("Index/information")}" class="back_list">{%BACK_LIST}</a></div>
<div class="blank5"></div>
<form name="edit" action="__APP__" method="post" enctype="multipart/form-data">
<table class="form" cellpadding=0 cellspacing=0>
	<tr>
		<td colspan=2 class="topTd"></td>
	</tr>
	<tr>
		<td class="item_title">个人账号:</td>
		<td class="item_input">{$adm_data.adm_name}</td>
	</tr>
	<tr>
		<td class="item_title">原操作密码:</td>
		<td class="item_input"><input type="password" class="textbox require" name="adm_password" /></td>
	</tr>
	<tr>
		<td class="item_title">新操作密码:</td>
		<td class="item_input"><input type="password" class="textbox require" name="adm_new_password" /></td>
	</tr>
	<tr>
		<td class="item_title">确认操作密码:</td>
		<td class="item_input"><input type="password" class="textbox require" name="adm_confirm_password" /></td>
	</tr>
	<tr>
		<td class="item_title"></td>
		<td class="item_input">
			<!--隐藏元素-->
			<input type="hidden" name="adm_id" value="{$adm_data.adm_id}" />
			<input type="hidden" name="{:conf("VAR_MODULE")}" value="Index" />
			<input type="hidden" name="{:conf("VAR_ACTION")}" value="do_change_password_operate" />
			<!--隐藏元素-->
			<input type="submit" class="button" value="{%CHANGE}" />
			<input type="reset" class="button" value="{%RESET}" />
		</td>
	</tr>
	<tr>
		<td colspan=2 class="bottomTd"></td>
	</tr>
</table>	 
</form>
</div>
<include file="Public:footer" />
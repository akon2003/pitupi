<div class="wrap" style="z-index:9; position:relative;">
	<div class="login_block">
		<div class="block">
			{if !$user_info}
			<div class="webtip">
				<div>公司成立至今，</div>
				<div><span style="font-size:16px;font-weight:bold;color:#0065B0;">100%</span>投资者按时获取收益。</div>
			</div>
			<div class="login">
				<a href="javascript:void(0);" onclick="ajax_login();"><img src="{$TMPL}/images/index/login.png"/></a>
			</div>
			<div class="register">
				<a href="{url x="index" u="user#register" }"><img src="{$TMPL}/images/index/register.png"/></a>
			</div>
			<div class="forgot">
				<a href="{url x="index" u="user#getpassword" }">忘记密码?</a>
			</div>
			{else}
			<div class="webtip">
				<div>欢迎</div>
				<div><span style="font-size:16px;font-weight:bold;color:#0065B0;">用户：{$user_info.user_name}</span></div>
			</div>
			<div class="uc_info">
				<a href="{url x="index" r="uc_center"}"><img src="{$TMPL}/images/index/uc_center.png"/></a>
			</div>
			<div class="uc_money" style="height:38px;">
				<a href="{url x="index" r="uc_money#incharge"}"><img src="{$TMPL}/images/index/recharge.png"/></a>
				<a href="{url x="index" r="uc_money#bank"}"><img src="{$TMPL}/images/index/carry.png"/></a>
				<a href="{url x="index" r="user#loginout"}"><img src="{$TMPL}/images/index/logout.png"/></a>
			</div>
			{/if}
		</div>
	</div>	
</div>
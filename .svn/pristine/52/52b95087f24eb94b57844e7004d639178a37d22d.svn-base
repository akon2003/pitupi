{// 引入标签库 }
<tagLib name="html" />
<include file="Public:header" />
<div class="main">
<div class="main_title">{$main_title}</div>
<div class="blank5"></div>
<div class="button_row">
	<if condition="$default_map">
	<input type="button" class="button" value="{%ADD}广告" onclick="location.href='{:u("Adv/add",array("rel_table"=>$default_map['rel_table'],"rel_id"=>$default_map['rel_id']))}';" />
	<else />
	<input type="button" class="button" value="{%ADD}广告" onclick="add();" />
	</if>
	<input type="button" class="button" value="{%EDIT}广告" onclick="_edit();" />
</div>
<div class="blank5"></div>
<html:list 
	id="dataTable" 
	style="dataTable dataTableSelect dataTableSelectDblclick" 
	name="adv" 
	datasource="list" 
	show="id|checkbox:选择|50px
		,name:广告名称
		,is_effect|get_is_effect:{%IS_EFFECT}
		,tmpl:模板
		,adv_id:广告ID" 
	 /> 

<div class="blank5"></div>
<div class="page">{$page}</div>
</div>
<include file="Public:footer" />
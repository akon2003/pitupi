
<div class="tabbox clearfix">
	<div class="tab"><a href="{url x="index" r="uc_invite"}">我要推荐</a></div>
	<div class="tab {if $ACTION_NAME eq 'invite' && $type eq 0}cur{/if}"><a href="{url x="index" r="uc_invite#invite"}">推荐列表</a></div>
</div>
<div class="uc_box bdd bt0">
    <table width="100%" border="0" cellspacing="0" cellpadding="0" class="uc-table">
        <tr >
            <th>编号</th>
            <th>用户ID</th>
            <th>姓名</th>
            <th>手机号</th>
            <th>{$LANG.REGISTER_TIME}</th>
        </tr>
        {foreach from=$list item=invite key=key name="invites"}
        <tr class="item {if $key mod 2 eq 1}item_1{/if}" {if $smarty.foreach.invites.last}style="border-bottom:0"{/if}>
            <td>{$invite.id}</td>
            <td>{$invite.user_name}</td>
            <td>{$invite.real_name}</td>
            <td>{$invite.mobile}</td>
            <td>{function name="to_date" value=$invite.create_time}</td>
        </tr>
        {/foreach}
    </table>
    
    <div class="blank"></div>
    <div class="pages">{$pages}</div>
    <div class="blank20"></div>
</div>
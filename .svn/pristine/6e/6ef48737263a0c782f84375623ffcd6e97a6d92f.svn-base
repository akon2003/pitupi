@CHARSET "UTF-8";
body{background:#fff; font-size:12px; font-family:"verdana,Arial";  margin:0px; padding:0px; color:#404040;padding-top:5px }
div{margin:0 auto; padding:0;}
h1,h2,h3,h4,h5,h6,ul,li,dl,dt,dd,form,img,p{margin:0; padding:0; border:none; list-style-type:none;}
a{ color:#3A3A3A; display:block; width:100%; height:20px; line-height:20px; }
.fa {display:inline;}
dl.menu { display:block; }
dl.menu dt{ cursor:pointer; display:block; background:url(../images/vh.gif) no-repeat 95% -45px #f7f7f7; padding:0 5px; color:#3A3A3A; font-size:14px;  text-indent:15px; height:35px; line-height:35px;border-bottom: 1px solid #ccc;}
dl.menu dt:hover{background:url(../images/vh.gif) no-repeat 95% -45px;color: #2076a3}
dl.menu dt.current{background:url(../images/vh.gif) no-repeat 95% -45px;color: #2076a3}
dl.menu dd{ display:block; background:#fff; padding:0 2px; margin:1px 0px;  text-indent:25px;}
dl.menu dd a{display:block; width:100%;text-decoration:none; height:32px; line-height:32px; border-bottom: 1px solid #ccc;font-size: 13px;}
a.current{color:#2076a3;}
dl.menu dd a:hover{ color:#2076a3;}
dl.menu-hide dt{ background-position:95% 10px}
dl.menu-hide dd{ display:none;}